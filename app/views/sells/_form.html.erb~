<%= simple_form_for(@sell) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , label: 'Name :', placeholder: 'Please enter your lovely name here ...',:required => true %>
    <%= f.input :email, label: 'E-Mail Address :', placeholder: 'Your Email address please...',:required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'%>
    <%= f.input :phnumber,label: 'Phone Number:', placeholder: 'Your contact name here...',:required => true %>
    <div hidden>
    <%= f.input :refer, placeholder: 'NoRef', style: 'display:none' , :input_html => { :value => params['rid'] }  %>
    </div>
    <%= f.input :noofbooktosell, label: 'No Of Books to Sell:', placeholder: 'Enter the number of books you have to sell ...',:required => true %>
    <%= f.input :collegename, label: 'College Name:', placeholder: 'Enter the name of your college ...' %>
    <% if user_signed_in? %>
	 <%= f.input :done, as: :boolean, checked_value: "true", unchecked_value: "false" %>
    <% end %>


  </div>
  <center>
  <div class="form-actions btn btn-danger">
    <%= f.button :submit,  value: 'Lets Go' %>
  </div>
  </center>
<% end %>
